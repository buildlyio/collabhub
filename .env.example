# Django Configuration
DJANGO_SETTINGS_MODULE=mysite.settings.dev
SECRET_KEY=django-insecure-your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database Configuration (Production Only - MySQL)
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=your_database_host
DB_PORT=3306

# Email Configuration (Production)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_PASSWORD=your_sendgrid_password

# AWS/DigitalOcean Spaces (Production Static Files)
SPACES_SECRET=your_digitalocean_spaces_secret_key

# Stripe Payment Configuration (REQUIRED for Marketplace)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_API_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# GitHub OAuth Configuration
GITHUB_KEY=your_github_oauth_app_key
GITHUB_SECRET=your_github_oauth_app_secret
GITHUB_API_TOKEN=ghp_your_github_personal_access_token

# OpenAI Configuration (Optional)
OPENAI_API_KEY=sk-your_openai_api_key

# Google Places API (Optional)
GOOGLE_PLACES_API_KEY=your_google_places_api_key

# Yelp API (Optional)
YELP_API_KEY=your_yelp_api_key

# Buildly Labs Integration (Optional)
LABS_TOKEN_URL=https://labs-api.buildly.dev
LABS_CLIENT_ID=your_labs_client_id
LABS_CLIENT_SECRET=your_labs_client_secret

# Forge Marketplace Configuration
FORGE_MARKETPLACE_ORG=buildly-marketplace
FRONTEND_URL=https://yourdomain.com

# Admin User Configuration (for initial setup script)
DJANGO_ADMIN_PASSWORD=your_admin_password